<UserControl x:Class="Store.ShoppingCart.ProductDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Store.ShoppingCart"
             mc:Ignorable="d" Height="212.28" Width="503.508">
    <Grid >
        <ListView  Name="ProductShippingDetalis" Height="213" VerticalAlignment="Top">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Product name and details" Width="200" DisplayMemberBinding="{Binding}" />
                    <GridViewColumn Header="Quantity" Width="55" DisplayMemberBinding="{Binding}" />
                    <GridViewColumn Header="Price" Width="100" DisplayMemberBinding="{Binding}" />
                    <GridViewColumn Header="Shipping Detalis" Width="150" DisplayMemberBinding="{Binding}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
